<% include header %>

  <form class="form-login" role="form" action="/users/singlelogin" method="post" style="margin-top: 8em">
      <h2 class="form-login-heading">Please log in</h2>
      <label for="inputEmail" class="loginlabel">Email address</label>
      <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Email address" required autofocus>
      <label for="inputPassword" class="loginlabel">Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
  </form>


<% include footer %>